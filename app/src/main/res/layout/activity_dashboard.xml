<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#391305"
    tools:context=".Dashboard">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:fontFamily="monospace"
        android:text="Welcome to Our Store"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_bg"
        android:layout_width="350dp"
        android:layout_height="480dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <TextView
        android:id="@+id/txtShoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shoes"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@id/view_bg"
        app:layout_constraintEnd_toEndOf="@id/view_bg"
        app:layout_constraintTop_toTopOf="@id/view_bg"/>

    <ImageView
        android:id="@+id/ig_cewe1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/sepatu_perempuan_1"
        app:layout_constraintEnd_toEndOf="@id/view_bg"
        app:layout_constraintTop_toBottomOf="@id/txtShoes"/>

    <TextView
        android:id="@+id/txt_laki_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Qeustar\nPutih Navy"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@id/ig_laki1"
        app:layout_constraintEnd_toEndOf="@id/ig_laki1"
        app:layout_constraintTop_toBottomOf="@id/ig_laki1"/>

    <ImageView
        android:id="@+id/ig_laki1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/sepatu_laki_1"
        app:layout_constraintStart_toStartOf="@id/view_bg"
        app:layout_constraintTop_toBottomOf="@id/txtShoes"/>

    <TextView
        android:id="@+id/txt_cewe_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Tokyo Putih\nNatural Merah"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@id/ig_cewe1"
        app:layout_constraintEnd_toEndOf="@id/ig_cewe1"
        app:layout_constraintTop_toBottomOf="@id/ig_cewe1"/>

    <ImageView
        android:id="@+id/ig_cewe2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/sepatu_perempuan_2"
        app:layout_constraintStart_toStartOf="@id/view_bg"
        app:layout_constraintTop_toBottomOf="@id/txt_laki_1"/>

    <TextView
        android:id="@+id/txt_cewe_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Rin\nAbu Toska"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@id/ig_cewe2"
        app:layout_constraintEnd_toEndOf="@id/ig_cewe2"
        app:layout_constraintTop_toBottomOf="@id/ig_cewe2"/>

    <ImageView
        android:id="@+id/ig_laki2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/sepatu_laki_2"
        app:layout_constraintEnd_toEndOf="@id/view_bg"
        app:layout_constraintTop_toBottomOf="@id/txt_cewe_1"/>

    <TextView
        android:id="@+id/txt_laki_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Leopard Cream\nCoklat Tua"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@id/ig_laki2"
        app:layout_constraintEnd_toEndOf="@id/ig_laki2"
        app:layout_constraintTop_toBottomOf="@id/ig_laki2"/>

    <View
        android:id="@+id/menu_bg"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/menu_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_bg"/>

    <TextView
        android:id="@+id/txtMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="65dp"
        android:text="Menu"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:drawableTop="@drawable/ic_baseline_menu_24"
        app:layout_constraintStart_toStartOf="@id/menu_bg"
        app:layout_constraintTop_toTopOf="@id/menu_bg"/>

    <TextView
        android:id="@+id/txtPesan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="80dp"
        android:drawableTop="@drawable/ic_baseline_shopping_bag_24"
        android:fontFamily="monospace"
        android:text="Order"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/txtMenu"
        app:layout_constraintTop_toTopOf="@id/menu_bg" />

    <TextView
        android:id="@+id/txtAkun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="90dp"
        android:text="Akun"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:drawableTop="@drawable/ic_baseline_account_circle_24"
        app:layout_constraintStart_toStartOf="@id/txtPesan"
        app:layout_constraintTop_toTopOf="@id/menu_bg"/>

</androidx.constraintlayout.widget.ConstraintLayout>